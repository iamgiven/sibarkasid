<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product && product.nama_barang %></title>
    <link rel="stylesheet" href="../../styles/navbar.css">
    <link rel="stylesheet" href="../../styles/product-page.css">
    <link rel="stylesheet" href="../../styles/footer.css">
</head>
<body>

    <%- include('../layouts/navbar') %>

    
    <!-- Product-page Section Start -->
    <section class="product-page-section">
        <div class="div-product-page">

            <div>
                <div class="img-product-page">
                    <img src="<%= product && product.img_barang %>" alt="">
                </div>
                <div class="info-product-page">
                    <div class="title-product-page">
                        <p><%= product && product.nama_barang %></p>
                        <p>Rp <%= product && product.harga_barang.toLocaleString('id-ID') %></p>
                        <div>
                            <p><%= product && product.deskripsi_barang %></p>
                        </div>
                        <div>
                            <p>Dijual oleh <%= product.username %></p>
                            <div>
                                <button id="saveButton" class="save-product dark-hover" type="submit" data-productid="<%= product._id %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                                      <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z" />
                                    </svg>
                                </button>
                                
                                <button class="whatsapp-icon dark-hover">
                                    <a href="https://api.whatsapp.com/send?phone=<%= product.phone %>&text=Hai%2C%20saya%20tertarik%20dengan%20<%= product.nama_barang %>%20punya%20kamu.%20Apakah%20masih%20ada?" target="_blank">
                                        <img src="../img/whatsapp-icon.png" alt="">
                                    </a>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
              
            
            <div>

            </div>

        </div>
    </section>
    <!-- Product-page Section End -->


    <%- include('../layouts/footer') %>

<script src="../script/save-button.js"></script>
<script src="../script/input-diskusi.js"></script>
</body>
</html>